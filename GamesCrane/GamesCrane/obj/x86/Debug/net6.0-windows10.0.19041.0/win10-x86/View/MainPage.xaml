<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GamesCrane.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamesCrane.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled">

    <Grid>
        <Image Source="/Assets/MainPageBackground.png" Stretch="UniformToFill" />

        <Grid Width="887" Height="510" HorizontalAlignment="Left" VerticalAlignment="Center"
              Margin="33, 69, 0 , 69">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="4*"/>
                <RowDefinition Height="9*" />
                <RowDefinition Height="4*"/>
                <RowDefinition Height="9*" />
                <RowDefinition Height="4*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Image x:ConnectionId='4' x:Name="GameImage1" Grid.Row="0" Grid.Column="0" Margin="10"
                                                                        />
            <Image x:ConnectionId='5' x:Name="GameImage2" Grid.Row="0" Grid.Column="1" Margin="10"
                                                                        />
            <Image x:ConnectionId='6' x:Name="GameImage3" Grid.Row="0" Grid.Column="2" Margin="10"
                                                                        />
            <Image x:ConnectionId='7' x:Name="GameImage4" Grid.Row="0" Grid.Column="3" Margin="10"
                                                                        />
            <Image x:ConnectionId='8' x:Name="GameImage5" Grid.Row="0" Grid.Column="4" Margin="10"
                                                                        />

            <Image x:ConnectionId='9' x:Name="GameImage6" Grid.Row="2" Grid.Column="0" Margin="10"
                                                                        />
            <Image x:ConnectionId='10' x:Name="GameImage7" Grid.Row="2" Grid.Column="1" Margin="10"
                                                                        />
            <Image x:ConnectionId='11' x:Name="GameImage8" Grid.Row="2" Grid.Column="2" Margin="10"
                                                                        />
            <Image x:ConnectionId='12' x:Name="GameImage9" Grid.Row="2" Grid.Column="3" Margin="10"
                                                                        />
            <Image x:ConnectionId='13' x:Name="GameImage10" Grid.Row="2" Grid.Column="4" Margin="10"
                                                                        />

            <Image x:ConnectionId='14' x:Name="GameImage11" Grid.Row="4" Grid.Column="0" Margin="10"
                                                                        />
            <Image x:ConnectionId='15' x:Name="GameImage12" Grid.Row="4" Grid.Column="1" Margin="10"
                                                                        />
            <Image x:ConnectionId='16' x:Name="GameImage13" Grid.Row="4" Grid.Column="2" Margin="10"
                                                                        />
            <Image x:ConnectionId='17' x:Name="GameImage14" Grid.Row="4" Grid.Column="3" Margin="10"
                                                                        />
            <Image x:ConnectionId='18' x:Name="GameImage15" Grid.Row="4" Grid.Column="4" Margin="10"
                                                                        />
        </Grid>

        <StackPanel Width="179" Height="167" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top"
              Margin="0, 113, 53 , 0">
            <Image x:ConnectionId='2' x:Name="GameSelectedImage" Height="135" Margin="0,10,0,0"/>
            <TextBlock x:ConnectionId='3' x:Name="GameSelectedTitle" Height="16" HorizontalAlignment="Center"/>
        </StackPanel>

        <Grid Width="200" Height="263" HorizontalAlignment="Right" VerticalAlignment="Center"
              Margin="0, 230, 44 , 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Command="{Binding NavigateToPageCommand}"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

            <Button Grid.Row="2" Grid.Column="0" 
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        </Grid>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        
        
        
    </Grid>
</Page>

