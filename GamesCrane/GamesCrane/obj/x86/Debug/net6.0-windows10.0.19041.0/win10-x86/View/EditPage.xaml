<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GamesCrane.View.EditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamesCrane.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="/Assets/EditPageBackground.png" Stretch="UniformToFill" />


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
               Padding="40" Background="Transparent">
            <Border CornerRadius="12" BorderBrush="#72b4e7" BorderThickness="8">
                    <Grid Width="460" Height="260" Background="Transparent" Margin="-5, -7, -5, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="12*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.ColumnSpan="3" Source="/Assets/EditMenuBackground.png" Stretch="UniformToFill" />

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Game Title"
                         HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <TextBox x:ConnectionId='2' Grid.Row="0" Grid.Column="1" Name="TitleBox"
                         VerticalAlignment="Center" Text="{Binding GameTitle, Mode=TwoWay}" />
                        <Button Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Command="{Binding NavigateToPageCommand}" Content="Go"/>
                    </Grid>
            <!--</Border>-->
        </Border>
                </StackPanel>





    </Grid>
</Page>

