<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GamesCrane.View.EditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamesCrane.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="/Assets/EditPageBackground.png" Stretch="UniformToFill" />

        <Grid Width="470" Height="460" Background="Transparent">
            <Border CornerRadius="12" BorderBrush="#72b4e7" BorderThickness="8">
                <Grid Width="460" Height="450" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="135" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="65" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="80" />
                        <RowDefinition Height="70" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.RowSpan="6" Source="/Assets/AddMenuBackground.png" Stretch="UniformToFill" />

                    <Grid Height="60"  Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="12*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>


                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Game Title" Margin="0, 0, 10, 0"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" />
                        
                        <TextBox x:ConnectionId='10' Grid.Row="0" Grid.Column="1" Name="TitleBox"
                                 VerticalAlignment="Center" Text="{Binding GameTitle, Mode=TwoWay}" />
                    </Grid>

                    <Grid Height="65"  Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="12*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>


                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Game Path" Margin="0, 0, 10, 0"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" 
                                   ToolTipService.ToolTip="Please ensure the file path you enter is accurate and leads to the correct and valid executable file (with the .exe extension). Double-check for any typos or mistakes in the path as the program will not be able to launch the desired application!"/>

                        <TextBox x:ConnectionId='9' Grid.Row="0" Grid.Column="1" Name="PathBox"                        
                                 VerticalAlignment="Center" Text="{Binding GamePath, Mode=TwoWay}">
                            <FlyoutBase.AttachedFlyout>
                                <Flyout>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="This system cannot run this file! Please enter a valid executable path." TextWrapping="Wrap"/>
                                        <TextBlock TextWrapping="Wrap">
                                            <Run Text="Error: " FontWeight="Bold"/>
                                            <Run Text="{Binding FilePathErrorDisplayText}"/>
                                        </TextBlock>  
                                    </StackPanel>
                                </Flyout>
                            </FlyoutBase.AttachedFlyout>
                        </TextBox> 

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="* Required" Margin="0, -18, 10, 0" Foreground="#9c1919" 
                                   HorizontalAlignment="Right" VerticalAlignment="Top" FontStyle="Italic"/>

                    </Grid>

                    <StackPanel Orientation="Horizontal" Grid.Row="3" Height="40">
                        <CheckBox x:ConnectionId='7' Content="Run as Administrator" Margin="50,0,0,0"
                                  VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                                               />
                        <CheckBox x:ConnectionId='8' Content="Path Includes Flags" Margin="50,0,0,0"
                                  VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                               />
                    </StackPanel>
                    
                    <Grid Height="80"  Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="180" />
                        </Grid.ColumnDefinitions>


                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Game Image" Margin="10, 0, 0, 0"
                                   HorizontalAlignment="Left" VerticalAlignment="Center" />

                        <Image x:ConnectionId='4' Name="SelectedImage" VerticalAlignment="Center" Width="50" 
                               Grid.Row="0" Grid.Column="1" Source="/Assets/StarsNoEdge.png"/>

                        <Button x:ConnectionId='5' Grid.Row="0" Grid.Column="2" Name="SelectImageButton" 
                                VerticalAlignment="Center" HorizontalAlignment="Left"
                                Height="29" Margin="-5, 0, 10, 0"
                                                    Content="Choose File" />

                        <TextBlock x:ConnectionId='6' Name="SelectedImagePath" Grid.Row="0" Grid.Column="3" 
                                   TextTrimming="CharacterEllipsis" Margin="-16, 0, 10, 0"
                                   HorizontalAlignment="Left" VerticalAlignment="Center" />

                    </Grid>


                    <StackPanel Orientation="Horizontal" Grid.Row="5" Height="70">
                        <Button x:ConnectionId='2' HorizontalAlignment="Left" VerticalAlignment="Center" Width="65" 
                                Command="{Binding ReturnToMainScreenCommand}" Content="Cancel" Margin="30, 10, 0, 20"
                                x:Name="BackButton"/>
                        <Button x:ConnectionId='3' HorizontalAlignment="Right" VerticalAlignment="Center" Width="90" 
                                                      Content="Add Game"  Margin="245, 10, 0, 20"
                                x:Name="SendDetailsButton" IsEnabled="false"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>

